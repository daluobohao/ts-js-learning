{
    "compilerOptions": {
      "target": "es6",
      "module": "CommonJS",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "sourceMap": true,
      "declaration": true,
      "jsx": "react",
      "lib": ["dom", "es2015", "es2016", "es2017"],
      "allowJs": true,
      "noImplicitAny": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }